@model asp.net_mvc.Models.UserFormViewModel

@using (Html.BeginForm("index", "userform", FormMethod.Post, new { @class = "form cmx-5" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Username, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Username)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Address, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Address)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Date, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Date, new { @class = "form-control", @id = "date_input", @autocomplete = "off" })
        <div><small id="dateHelp" class="form-text text-muted">Format: dd/mm/yyyy Range: 1/1/1990 to 1/1/2090</small></div>
        @Html.ValidationMessageFor(model => model.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Nationality, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Nationality, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nationality)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SelectedCountry, new { @class = "form-label" })
        @Html.DropDownListFor(model => model.SelectedCountry, Model.Countries,"---Select---", new { @class = "form-select" })
        @Html.ValidationMessageFor(model => model.SelectedCountry)
    </div>
    <div class="btn-group mt-2">
        <button type="submit" class="btn btn-primary text">
            Register & Login
        </button>
    </div>
}
<link href="~/Styles/bootstrap-datepicker.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/bootstrap-datepicker.js"></script>
<script>
    $(document).ready(function () {
        $("#date_input").datepicker({
            autoclose: true,
            changeMonth: true,
            changeYear: true,
            format: "dd/mm/yyyy",
            startDate: new Date('1/1/1990'),
            endDate: new Date('1/1/2090')
        });
    });
</script>